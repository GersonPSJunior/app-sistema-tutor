<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.extra.Ajuda">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:text="Me ajuda a manter o meu foco e a colocar em prÃ¡tica o que aprendo."
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/radio_group_ajuda"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp">

            <RadioButton
                android:id="@+id/radio_ajuda_concordo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/concordo" />

            <RadioButton
                android:id="@+id/radio_ajuda_concordop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/concordo_parcialmente" />

            <RadioButton
                android:id="@+id/radio_ajuda_neutro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/neutro" />

            <RadioButton
                android:id="@+id/radio_ajuda_discordop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/discordo_parcialmente" />

            <RadioButton
                android:id="@+id/radio_ajuda_discordo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/discordo" />
        </RadioGroup>

        <Button
            android:id="@+id/button_proximo_ajuda"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/radio_group_ajuda"
            app:layout_constraintTop_toBottomOf="@+id/radio_group_ajuda"
            app:layout_constraintVertical_bias="1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/shape_button_proximo"
            android:text="Proximo"
            android:textColor="@android:color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>