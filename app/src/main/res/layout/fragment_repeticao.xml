<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.autodidata.Repeticao">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:text="Tenho mais facilidade de aprender por meio da repetição (escrita)."
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/radio_group_repeticao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7">

            <RadioButton
                android:id="@+id/radio_repeticao_concordo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/concordo" />

            <RadioButton
                android:id="@+id/radio_repeticao_concordop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/concordo_parcialmente" />

            <RadioButton
                android:id="@+id/radio_repeticao_neutro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/neutro" />

            <RadioButton
                android:id="@+id/radio_repeticao_discordop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/discordo_parcialmente" />

            <RadioButton
                android:id="@+id/radio_repeticao_discordo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/discordo" />
        </RadioGroup>

        <Button
            android:id="@+id/button_proximo_repeticao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/shape_button_proximo"
            android:text="Proximo"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/radio_group_repeticao"
            app:layout_constraintTop_toBottomOf="@+id/radio_group_repeticao"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>